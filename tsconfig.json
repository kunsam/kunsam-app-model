{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "paths": {
      "*": [ "types/*" ]
    },
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "module": "es2015",
    "outDir": "./lib",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "lib",
    "node_modules",
  ]
}